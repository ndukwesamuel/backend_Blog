class Post_Form(ModelForm):
    class Meta:
        model= Post
        fields= '__all__'
        # exclude =  ['user']
        widgets = {
            'title':forms.TextInput(attrs={'class':'form-control'}),        
            'author':forms.TextInput(attrs={'class': 'form-control'}),
            'body':forms.Textarea(attrs={'class': 'form-control'}),
            
        }
}

